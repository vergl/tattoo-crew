<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="form">
            <h1>Edit "<%= tattoo.name %>"</h1>
            <div>
                 <form class="form-horizontal" action="/tattoos/<%= tattoo._id %>?_method=PUT" method="POST">
                     <div class="form-group">
                        <label for="name" class="col-sm-2 control-label">Name:</label>
                        <div class="col-sm-10">
                           <input id="name" class="form-control wheat-border" type="text" value="<%= tattoo.name %>" name="tattoo[name]">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="image" class="col-sm-2 control-label">Image:</label>
                        <div class="col-sm-10">
                           <input id="image" class="form-control wheat-border" type="text" value="<%= tattoo.image %>" name="tattoo[image]">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="description" class="col-sm-2 control-label">Description:</label>
                        <div class="col-sm-10">
                           <input id="description" class="form-control wheat-border" type="text" value="<%= tattoo.description %>" name="tattoo[description]">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="place" class="col-sm-2 control-panel">Place:</label>
                        <div class="col-sm-10">
                           <input id="place" class="form-control wheat-border" type="text" value="<%= tattoo.place %>" name="tattoo[place]">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="size" class="col-sm-2 control-panel">Size:</label>
                        <div class="col-sm-10">
                           <input id="size" class="form-control wheat-border" type="text" value="<%= tattoo.size %>" name="tattoo[size]">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="price" class="col-sm-2 control-panel">Price:</label>
                        <div class="col-sm-10">
                           <input class="form-control wheat-border" type="number" value="<%= tattoo.price %>" placeholder="price" name="tattoo[price]" min="0.01" step="0.01">
                        </div>
                     </div>
                     <div class="form-group">
                        <div class="button-width">
                           <button class="site-button btn-block">Submit!</button>
                        </div>
                     </div>
                </form>
                <a class="site-button-sm" href="/tattoos">Go Back</a>
            </div>
        </div>
    </div>
    
</div>
<% include ../partials/footer %>