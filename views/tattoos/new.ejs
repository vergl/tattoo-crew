<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="form">
            <h1>Load a new Tattoo</h1>
            <div>
                 <form class="form-horizontal" action="/tattoos" method="POST">
                     <div class="form-group">
                        <label for="name" class="col-sm-2 control-label">Name:</label>
                        <div class="col-sm-10">
                           <input id="name" class="form-control wheat-border" type="text" placeholder="name" name="name">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="url" class="col-sm-2 control-label">URL:</label>
                        <div class="col-sm-10">
                           <input id="url" class="form-control wheat-border" type="text" placeholder="image url" name="image">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="description" class="col-sm-2 control-label">Description:</label>
                        <div class="col-sm-10">
                           <input id="description" class="form-control wheat-border" type="text" placeholder="description" name="description">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="place" class="col-sm-2 control-label">Place:</label>
                        <div class="col-sm-10">
                           <input id="place" class="form-control wheat-border" type="text" placeholder="place" name="place">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="size" class="col-sm-2 control-label">Size:</label>
                        <div class="col-sm-10">
                           <input id="size" class="form-control wheat-border" type="text" placeholder="size" name="size">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="price" class="col-sm-2 control-label">Price:</label>
                        <div class="col-sm-10">
                           <input id="price" class="form-control wheat-border" type="number" placeholder="price" name="price" min="0.01" step="0.01">
                        </div>
                     </div>
                     <div class="form-group">
                        <div class="button-width">
                           <button class="site-button btn-block">Submit!</button>
                        </div>
                     </div>
                </form>
                <a href="/tattoos" class="site-button-sm">Go Back</a>
            </div>
        </div>
    </div>
    
</div>
<% include ../partials/footer %>