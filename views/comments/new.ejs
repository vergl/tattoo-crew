<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="form">
            <h1>Add New Comment to "<%= tattoo.name %>"</h1>
            <div>
                 <form action="/tattoos/<%=tattoo._id%>/comments" method="POST">
                     <div class="form-group">
                        <input class="form-control wheat-border" type="text" placeholder="text" name="comment[text]">
                     </div>
                     <div class="form-group">
                        <button class="site-button btn-block">Submit!</button>
                     </div>
                </form>
                <a class="site-button-sm" href="/tattoos">Go Back</a>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>