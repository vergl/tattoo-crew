<% include ../partials/header %>
<div class="container">
    <h2 class="lead">About <%= user.name %></h2>
    <div class="row user-info">
        <div class="col-sm-2">
            <img class="img-responsive" src="<%= user.image ? user.image : 'https://techreport.com/forums/styles/canvas/theme/images/no_avatar.jpg' %>" />
        </div>
        <div class="col-sm-10">
            <h2>Name: <i><%= user.name ? user.name : 'Not provided' %></i></h2>
            <h4>City: <i><%= user.city ? user.city + ', ' + user.country : 'Not provided' %></i></h4>
            <p>Birth Date: <i><%= user.birthDate ? user.birthDate : 'Not provided' %></i></p>
            <p>About : <i><%= user.about ? user.about : 'User didn\'t write anything about himself'  %></i></p>
            <% if (currentUser && user._id.equals(currentUser._id)) { %>
                <a class="site-button-sm" href="/users/<%=user._id%>/edit">Edit</a>
            <% } %>
        </div>
    </div>
    <h2 class="lead">Works:</h2>
    <div class="row user-info">
        <% if (tattoos.length == 0) { %>
            <h3 class="text-center">This user hasn't show us any tattoo yet</h3>
        <% } else { %>
            <% tattoos.forEach(function(tattoo){  %>
                 <div class="col-md-3 col-sm-6">
                        <div class="thumbnail site-container text-center">
                            <img class="img-height" src="<%= tattoo.image %>">
                            <div class="caption">
                                <h4><%=tattoo.name %></h4>
                                <p><i>by <%=tattoo.author.username %></i></p>
                            </div>
                            <p>
                                <a href="/tattoos/<%= tattoo._id %>" class="site-button">More info</a>
                            </p>
                        </div>
                    </div>
            <% }) %>
        <% } %>
    </div>
</div>

 

<% include ../partials/footer %>