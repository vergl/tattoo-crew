<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="form">
            <h1>Edit profile</h1>
            <div>
                 <form class="form-horizontal" action="/users/<%= user._id %>?_method=PUT" method="POST">
                     <div class="form-group">
                        <label for="name" class="col-sm-2 control-label">Name: </label>
                        <div class="col-sm-10">
                            <input id="name" class="form-control" type="text" value="<%= user.name %>" name="user[name]">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="image" class="col-sm-2 control-label">Photo: </label>
                        <div class="col-sm-10">
                            <input id="image" class="form-control" type="text" value="<%= user.image %>" name="user[image]">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="birthDate" class="col-sm-2 control-label">Birth Date: </label>
                        <div class="col-sm-10">
                            <input id="birthDate" class="form-control" type="text" value="<%= user.birthDate %>" name="user[birthDate]">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="country" class="col-sm-2 control-label">Country: </label>
                        <div class="col-sm-10">
                            <input id="country" class="form-control" type="text" value="<%= user.country %>" name="user[country]">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="city" class="col-sm-2 control-label">City: </label>
                        <div class="col-sm-10">
                            <input id="city" class="form-control" type="text" value="<%= user.city %>" name="user[city]">
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="about" class="col-sm-2 control-label">About: </label>
                        <div class="col-sm-10">
                            <input id="about" class="form-control" type="text" value="<%= user.about %>" name="user[about]">
                        </div>
                     </div>
                     <div class="form-group">
                         <div class="button-width">
                             <button class="site-button btn-block">Save Changes</button>
                         </div>
                     </div>
                </form>
                <a class="site-button-sm" href="/users">Go Back</a>
            </div>
        </div>
        
    </div>
    
</div>
<% include ../partials/footer %>