<% include ../partials/header %>

    <div class="container">   
    
        <h1>Users</h1>
            
        <div class="row">
            <% users.forEach(function(user){ %>
                <div class="row user-info">
                    <div class="col-sm-2">
                        <img class="img-responsive" src="<%= user.image ? user.image : 'https://techreport.com/forums/styles/canvas/theme/images/no_avatar.jpg' %>" />
                    </div>
                    <div class="col-sm-10">
                        <h2>Name: <i><%= user.name ? user.name : 'Not provided'%></i></h2>
                        <h4>City: <i><%= user.city ? user.city + ', ' + user.country : 'Not provided' %></i></h4>
                        <p>Birth Date: <i><%= user.birthDate ? user.birthDate : 'Not provided' %></i></p>
                        <p>
                            <a href="/users/<%= user._id %>" class="site-button-sm">More info</a>
                        </p>
                    </div>
                </div>
            <% });%>
        </div>
    </div>

<% include ../partials/footer %>